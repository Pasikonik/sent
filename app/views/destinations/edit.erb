<div class="col-md-2">
  <%= link_to 'Back', destination_path(@destination), class: 'btn btn-default' %>
</div>

<div class="col-md-4 col-md-offset-2 text-center">
  <%= simple_form_for @destination, html: { class: 'form-horizontal' },
                                    wrapper: :horizontal_form do |f| %>
    <%= f.input :name %>
    <%= f.input :fb_page, collection: @pages %>
    <%= f.button :submit %>
  <% end %>
</div>
