
<div class="row">
  <div class="col-md-2">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#new-destination-modal" id="new-destination">
      New destination
    </button>
  </div>

  <div class="col-md-8 text-center">
    <h2>My destinations</h2>
  </div>
</div>

<hr>

<div class="row">
  <% @destinations.each do |destination| %>
    <div class="destination-index col-md-2">
      <%= link_to destination_path(destination) do %>
        <div class="destination-index__name">
          <%= destination.name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="new-destination-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Destination</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @destination do |f| %>
          <%= f.input :name %>
          <%= f.button :submit, class: "center-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
